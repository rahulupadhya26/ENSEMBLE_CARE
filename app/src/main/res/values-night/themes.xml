<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SelfCare" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryDark">@color/primaryDarkGreen</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="itemTextStyle">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/muli</item>
    </style>

    <style name="fontfamily">
        <item name="fontFamily">@font/muli</item>
    </style>

    <style name="Dialog.App" parent="Theme.SelfCare">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
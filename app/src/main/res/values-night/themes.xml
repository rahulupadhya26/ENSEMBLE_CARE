<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SelfCare" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryDark">@color/primaryDarkGreen</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="itemTextStyle">
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="fontfamily">
        <item name="fontFamily">@font/avenir_medium</item>
    </style>

    <style name="buttonBackground">
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:layout_marginStart">@dimen/_10dp</item>
        <item name="android:layout_marginEnd">@dimen/_10dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:layout_marginBottom">@dimen/_5dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Dialog.App" parent="Theme.SelfCare">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="background">@color/colorTransparent</item>
    </style>
</resources>
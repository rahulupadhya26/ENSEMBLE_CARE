<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MyAssessmentsFragment">

    <TextView
        android:id="@+id/txtJournals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Assessments"
        android:textAppearance="@style/fontfamily"
        android:textColor="@color/black"
        android:textSize="@dimen/_26sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAssessments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10dp"/>

    <TextView
        android:id="@+id/txt_no_assessments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Currently you don't have any assessments."
        android:textAppearance="@style/fontfamily"
        android:textSize="@dimen/_22sp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/localBackground"
        android:textStyle="bold"
        android:visibility="gone"/>

</LinearLayout>
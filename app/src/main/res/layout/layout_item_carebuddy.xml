<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutCareBuddy">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_10dp"
        app:cardElevation="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15dp"
            android:paddingTop="@dimen/_15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="40dp"
                android:layout_marginBottom="@dimen/_15dp">

                <ImageView
                    android:id="@+id/imgCareBuddy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtNameFirstLetter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="@style/fontfamily"
                    android:textStyle="bold"
                    android:textSize="@dimen/_24sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="#E7A1A1"
                    android:visibility="gone"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtCareBuddyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtCareBuddyRelation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/fontfamily"
                android:textColor="#BC9393"
                android:gravity="center"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
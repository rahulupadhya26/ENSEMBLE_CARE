<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.TherapistDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:background="@drawable/bg_box_grey_top_corners">

            <ImageView
                android:id="@+id/imgTherapistDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_new_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="@dimen/_5dp"
                android:text="Back"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/primaryGreen"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:src="@drawable/journal_resource_back"
                app:tint="@color/primaryGreen" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/view_btn"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTherapistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="@color/primaryGreen"
                    android:textSize="@dimen/_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/therapistType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#837E7E"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detailFilledStar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filled_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailFilledStar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filled_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailFilledStar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filled_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailFilledStar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filled_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailFilledStar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filled_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailEmptyStar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailEmptyStar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailEmptyStar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_star"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/detailEmptyStar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_star"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/detailEmptyStar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty_star"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTherapyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/_10dp"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#514F4F"
                    android:textSize="@dimen/_18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtReadMore"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_above="@+id/view_btn"
                android:background="@drawable/read_more_gradient_background"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:text="Read more"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/primaryGreen"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />


            <View
                android:id="@+id/view_btn"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_above="@+id/btnConfirmDoctorDetail"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:background="#80000000" />

            <Button
                android:id="@+id/btnConfirmDoctorDetail"
                style="@style/buttonBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:text="Confirm Provider" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ConsentFormFragment">

    <RelativeLayout
        android:id="@+id/layout_consent_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnConsentLetter">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/selflove" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:text="www.selfcare.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Consent Letter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:padding="5dp"
                    android:text="I voluntarily agree to receive evaluation/consultation from the doctors/therapists/physicians booked through Selfcare App. I concur on the below information supplied while booking the appointment."
                    android:textColor="@color/primaryGreen"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:padding="5dp"
                    android:text="I understand and agree that I will participate in my treatment/consultation plan."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/fontfamily"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="SIGN BELOW"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sp"/>

                <com.app.selfcare.utils.SignatureView
                    android:id="@+id/signatureView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_rectangle_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginRight="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp" />

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/maroon"
                            android:text="Clear"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnConsentLetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_high_conf_info"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_30dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/fontfamily"
            android:background="@drawable/button_style_blue"
            android:gravity="center"
            android:text="Submit"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/txt_high_conf_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:text="Highly confidential information"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_screenshot_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:padding="10dp"
            android:text="Close"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/img_screenshot"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_form_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/avenir_heavy"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>

</FrameLayout>
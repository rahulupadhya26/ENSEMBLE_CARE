<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_background"
    tools:context=".fragment.MusicCoachFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/musicBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_8dp"
                android:src="@drawable/journal_resource_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/musicFav"
                android:layout_toEndOf="@+id/musicBack"
                android:gravity="center"
                android:text="Music"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/white"
                android:textSize="@dimen/_28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/musicFav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10dp"
                android:src="@drawable/favorite"
                app:tint="@color/white" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="Listen by category"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:paddingEnd="@dimen/_10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:cardBackgroundColor="#70D9D9D9"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_5dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingBottom="@dimen/_5dp"
                                android:text="Relaxation"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:cardBackgroundColor="#70D9D9D9"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:background="#70D9D9D9"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_5dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingBottom="@dimen/_5dp"
                                android:text="Reminiscence"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:cardBackgroundColor="#70D9D9D9"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:background="#70D9D9D9"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_5dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingBottom="@dimen/_5dp"
                                android:text="Self Expression"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:cardBackgroundColor="#70D9D9D9"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:background="#70D9D9D9"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_5dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingBottom="@dimen/_5dp"
                                android:text="Enhanced Focus"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5dp"
                            app:cardBackgroundColor="#70D9D9D9"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp">

                            <TextView
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:background="#70D9D9D9"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15dp"
                                android:paddingTop="@dimen/_5dp"
                                android:paddingEnd="@dimen/_15dp"
                                android:paddingBottom="@dimen/_5dp"
                                android:text="Well-being"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp"
                                android:textStyle="bold" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:background="#BDB4B4"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layoutDashboardMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMusicRecommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:text="Recommended"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:text="Specially hand-picked for you"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewRecommendedMusic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_10dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="@dimen/_10dp"
                                    app:cardElevation="@dimen/_5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:background="#944B1212">

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="@dimen/_10dp"
                                    app:cardElevation="@dimen/_5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:background="#944B1212">

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="@dimen/_10dp"
                                    app:cardElevation="@dimen/_5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:background="#944B1212">

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="@dimen/_10dp"
                                    app:cardElevation="@dimen/_5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:background="#944B1212">

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="@dimen/_10dp"
                                    app:cardElevation="@dimen/_5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:background="#944B1212">

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </HorizontalScrollView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:background="#BDB4B4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMusicRelaxation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:text="Relaxation"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:text="These can feels relax"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sp"
                            android:visibility="gone"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewRelaxation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_10dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginTop="@dimen/_15dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:background="#BDB4B4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMusicWellBeing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:text="Well being"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:text="These can feels y"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sp"
                            android:visibility="gone"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewWellBeing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_10dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginTop="@dimen/_15dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:background="#BDB4B4"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="Category"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/layoutRelax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/carebuddy" />

                                    <TextView
                                        android:id="@+id/txtRelaxation"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Relaxation"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutReminiscence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/reminiscence" />

                                    <TextView
                                        android:id="@+id/txtReminiscence"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Reminiscence"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="#FFFFFF"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/layoutSelfExpression"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/self_expression" />

                                    <TextView
                                        android:id="@+id/txtSelfExpression"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Self Expression"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEnhancedFocus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/enhanced_focus" />

                                    <TextView
                                        android:id="@+id/txtEnhancedFocus"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Enhanced Focus"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="#FFFFFF"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/layoutWellBeing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/well_being" />

                                    <TextView
                                        android:id="@+id/txtWellBeing"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Well Being"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutNeuroMusic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="@dimen/_10dp"
                            app:cardElevation="@dimen/_5dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:foreground="#40000000"
                                        android:scaleType="centerCrop" />

                                    <TextView
                                        android:id="@+id/txtNeuroMusic"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:gravity="center"
                                        android:text="Neuro Music"
                                        android:textAppearance="@style/fontfamily"
                                        android:textColor="#FFFFFF"
                                        android:textSize="@dimen/_20sp"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


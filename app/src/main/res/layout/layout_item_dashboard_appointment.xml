<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_20dp"
    app:cardElevation="@dimen/_5dp"
    android:id="@+id/cardViewAppointment"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eff6fc">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDoctor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_5dp"
            android:layout_margin="@dimen/_5dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_5dp"
                android:src="@drawable/doctor_img"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_below="@+id/cardViewDoctor"
            android:id="@+id/txtTherapist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10dp"/>

        <TextView
            android:layout_below="@+id/txtTherapist"
            android:id="@+id/txtTherapistType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#b2c5d4"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:id="@+id/btnStartAppointment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_corner_rounded_edittext"
                    android:backgroundTint="@color/white"
                    android:layout_margin="@dimen/_5dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/call"
                        app:tint="#b8cad8" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/btnCancelAppointment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_corner_rounded_edittext"
                    android:backgroundTint="@color/white"
                    android:layout_margin="@dimen/_5dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/cancel_appoint"
                        app:tint="#b8cad8"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/fontfamily"
                android:textSize="@dimen/_24sp"
                android:padding="@dimen/_5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/fontfamily"
                android:textSize="@dimen/_16sp"
                android:padding="@dimen/_5dp"/>

            <TextView
                android:id="@+id/txtTherapyDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/fontfamily"
                android:textSize="@dimen/_16sp"
                android:padding="@dimen/_5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="@dimen/_5dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:src="@drawable/start_appointment" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="@dimen/_5dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:src="@drawable/cancel_appointment" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10dp"
        android:paddingBottom="@dimen/_5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:text="Appointment rescheduled"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:text="Your appointment has been confirmed with"
            android:textColor="#957979"
            android:textSize="@dimen/_12sp"
            android:gravity="center"
            android:padding="@dimen/_5dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardElevation="@dimen/_5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="0dp"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/imgReschApptDoctorImg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/doctor_img" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtReschApptTherapistName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="@color/primaryGreen"
                                    android:textSize="@dimen/_16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtReschApptTherapistType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#837E7E"
                                    android:textSize="@dimen/_12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                            <ImageView
                                android:id="@+id/reschApptMode"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="@dimen/_5dp"
                                android:padding="@dimen/_5dp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="@color/divider" />

                        <TextView
                            android:id="@+id/txtReschApptDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_10dp"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/primaryGreen"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8D2D2"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_5dp"/>

        <TextView
            android:id="@+id/txtRescheduleApptOkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:text="OK"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sp"
            android:gravity="center"
            android:padding="@dimen/_10dp"/>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5FC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CarePlanDashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:text="TODAY"
                android:textAppearance="@style/fontfamily"
                android:textColor="#830CDB"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold"
                android:layout_margin="@dimen/_10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                app:cardCornerRadius="@dimen/_20dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="@dimen/_5dp"
                                android:layout_margin="@dimen/_5dp"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="@dimen/_40dp"
                                    android:layout_height="@dimen/_40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:src="@drawable/tasklist" />
                            </androidx.cardview.widget.CardView>

                            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                android:id="@+id/taskProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:enableProgressAnimation="true"
                                app:progressBackgroundColor="@color/white"
                                app:progressBackgroundStrokeWidth="@dimen/_2dp"
                                app:progressCap="butt"
                                app:progressColor="#0AFF29"
                                android:layout_centerInParent="true"
                                app:progressStrokeWidth="@dimen/_10dp"
                                app:textSize="0sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_below="@+id/taskProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tasks Completed"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/primaryGreen"
                                android:textSize="@dimen/_14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 of 7"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="#948989"
                                android:textSize="@dimen/_14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="@dimen/_5dp"
                                android:layout_margin="@dimen/_5dp"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="@dimen/_40dp"
                                    android:layout_height="@dimen/_40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:src="@drawable/calories_img" />
                            </androidx.cardview.widget.CardView>

                            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                android:id="@+id/caloriesProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:enableProgressAnimation="true"
                                app:progressBackgroundColor="@color/white"
                                app:progressBackgroundStrokeWidth="@dimen/_2dp"
                                app:progressCap="butt"
                                app:progressColor="#CF28BE"
                                android:layout_centerInParent="true"
                                app:progressStrokeWidth="@dimen/_10dp"
                                app:textSize="0sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_below="@+id/taskProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Calories"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/primaryGreen"
                                android:textSize="@dimen/_14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="675 of 2500"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="#948989"
                                android:textSize="@dimen/_14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:cardCornerRadius="50dp"
                                app:cardElevation="@dimen/_5dp"
                                android:layout_margin="@dimen/_5dp"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:layout_width="@dimen/_40dp"
                                    android:layout_height="@dimen/_40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_5dp"
                                    android:src="@drawable/exercise_care_plan" />
                            </androidx.cardview.widget.CardView>

                            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                android:id="@+id/exerciseProgress"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                app:enableProgressAnimation="true"
                                app:progressBackgroundColor="@color/white"
                                app:progressBackgroundStrokeWidth="@dimen/_2dp"
                                app:progressCap="butt"
                                app:progressColor="#22E1BF"
                                android:layout_centerInParent="true"
                                app:progressStrokeWidth="@dimen/_10dp"
                                app:textSize="0sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_below="@+id/taskProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Exercise"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="@color/primaryGreen"
                                android:textSize="@dimen/_14sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20 of 45 mins"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="#948989"
                                android:textSize="@dimen/_14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="TASKS"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#830CDB"
                    android:textSize="@dimen/_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCarePlanTasksShowAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="SHOW ALL"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#938D8D"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed below to earn a star for today"
                android:textStyle="bold"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/primaryGreen"
                android:textSize="@dimen/_14sp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:text="Exercise"
                android:textAppearance="@style/fontfamily"
                android:textColor="#1A205C"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_20dp"
                app:cardElevation="@dimen/_5dp"
                android:layout_marginTop="-10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:foreground="#80000000"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exercise_careplan_back" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/fontfamily"
                            android:textSize="@dimen/_20sp"
                            android:text="Body workout"
                            android:textColor="@color/white"
                            android:padding="@dimen/_10dp"
                            android:textStyle="bold"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#FFE9A0">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/fontfamily"
                                android:text="50 mins"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sp"
                                android:paddingStart="@dimen/_5dp"
                                android:paddingEnd="@dimen/_5dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:text="Nutrition"
                android:textAppearance="@style/fontfamily"
                android:textColor="#1A205C"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_20dp"
                app:cardElevation="@dimen/_5dp"
                android:layout_marginTop="-10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:foreground="#80000000"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nutrition_img1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/fontfamily"
                            android:textSize="@dimen/_20sp"
                            android:text="Fruit Salad Bowl"
                            android:textColor="@color/white"
                            android:padding="@dimen/_10dp"
                            android:textStyle="bold"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:cardCornerRadius="@dimen/_20dp"
                            app:cardElevation="5dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#FFE9A0">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/fontfamily"
                                android:text="5 mins"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sp"
                                android:paddingStart="@dimen/_5dp"
                                android:paddingEnd="@dimen/_5dp"/>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
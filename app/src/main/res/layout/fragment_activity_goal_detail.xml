<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5FC"
    tools:context=".fragment.ActivityGoalDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:elevation="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5dp">

                <ImageView
                    android:id="@+id/activityGoalDetailBack"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_5dp"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/back_care_plan" />

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/company_logo" />

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:padding="@dimen/_10dp"
                    android:src="@drawable/notification" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT A DATE"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="@color/calendarGrey"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/tvDate"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/calendarGrey"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:background="@drawable/ic_arrow_right_24dp" />

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/btnRight"
                    android:background="@drawable/ic_arrow_left_24dp" />
            </RelativeLayout>

            <ensemblecare.csardent.com.calendar.SingleRowCalendar
                android:id="@+id/activityGoalDetailCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:deselection="true"
                app:longPress="false"
                app:multiSelection="false" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Drink Water"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:text="65% Completed"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="#624E4E"
                            android:textSize="@dimen/_16sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="6000ml"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="#927F7F"
                        android:textSize="@dimen/_18sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardElevation="@dimen/_5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="3900 ml"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="#26476D"
                                android:textSize="@dimen/_36sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="@dimen/_20dp"
                                android:layout_marginEnd="@dimen/_20dp"
                                android:background="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="6000 ml"
                                android:textAppearance="@style/fontfamily"
                                android:textColor="#26476D"
                                android:textSize="@dimen/_36sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <RelativeLayout
                                android:id="@+id/layoutDrinkWaterProgress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@+id/drinkWaterProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10dp"
                                    app:direction="clockwise"
                                    app:enableProgressAnimation="true"
                                    app:fillBackground="true"
                                    app:progressBackgroundColor="#0B315E"
                                    app:progressBackgroundStrokeWidth="@dimen/_2dp"
                                    app:progressCap="round"
                                    app:progressColor="#26476D"
                                    app:progressStrokeWidth="@dimen/_20dp"
                                    app:textSize="0sp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:padding="@dimen/_15dp"
                                    android:src="@drawable/water" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="GOAL COMPLIANCE"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#830CDB"
                    android:textSize="@dimen/_20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardElevation="@dimen/_5dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10dp"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="10dp"
                                    android:layout_height="100dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_orientation="vertical"
                                    app:progressView_padding="1dp"
                                    app:progressView_progress="40"
                                    app:progressView_radius="@dimen/_10dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="SUN"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="50"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MON"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="90"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TUE"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="56"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WED"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="20"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="THU"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="0"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FRI"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <com.skydoves.progressview.ProgressView
                                    android:layout_width="20dp"
                                    android:layout_height="100dp"
                                    app:progressView_colorBackground="#D8D8D8"
                                    app:progressView_colorProgress="#26476D"
                                    app:progressView_max="100"
                                    app:progressView_progress="0"
                                    app:progressView_orientation="vertical"
                                    app:progressView_radius="@dimen/_10dp"
                                    app:progressView_autoAnimate="true"
                                    app:progressView_padding="1dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SAT"
                                    android:textAppearance="@style/fontfamily"
                                    android:textColor="#968B8B"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:text="Did you know?"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="#830CDB"
                    android:textSize="@dimen/_20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardElevation="@dimen/_5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="@dimen/_20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="@dimen/_20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/idea" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:text="It lubricates the joints"
                            android:gravity="center"
                            android:textAppearance="@style/fontfamily"
                            android:textColor="#18A170"
                            android:textSize="@dimen/_18sp"
                            android:padding="@dimen/_10dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cartilage, found in joints and the disks of the spine, contains around 80 percent water. Long-term dehydration can reduce the jointsâ€™ shock-absorbing ability, leading to joint pain."
                            android:textAppearance="@style/fontfamily"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sp"
                            android:padding="@dimen/_10dp"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
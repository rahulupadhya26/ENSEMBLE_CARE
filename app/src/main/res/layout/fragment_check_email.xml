<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CheckEmailFragment">

    <TextView
        android:id="@+id/txtCheckEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/fontfamily"
        android:text="Login"
        android:textSize="@dimen/_20sp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/_5dp"
            app:cardCornerRadius="@dimen/_20dp"
            app:cardBackgroundColor="#EFEBEB">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/envelope"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check your mail"
            android:textAppearance="@style/fontfamily"
            android:textColor="@color/black"
            android:textSize="@dimen/_26sp"
            android:padding="@dimen/_5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent a password recover instruction to your email"
            android:textAppearance="@style/fontfamily"
            android:textColor="#695D5D"
            android:layout_marginStart="@dimen/_30dp"
            android:layout_marginEnd="@dimen/_30dp"
            android:gravity="center"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/resetPasswordVerifyBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_5dp"
        android:src="@drawable/journal_resource_back"
        app:tint="@color/primaryGreen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textAppearance="@style/fontfamily"
        android:textColor="@color/black"
        android:textSize="@dimen/_30sp"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="@dimen/_20dp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A verification code has been sent to the email associated with your account. Please check your inbox."
            android:textAppearance="@style/fontfamily"
            android:textColor="#695D5D"
            android:textSize="@dimen/_16sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginStart="@dimen/_20dp" />

        <TextView
            android:id="@+id/txtVerifyEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#EEECEC">

                <EditText
                    android:id="@+id/resetPassCode1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:textSize="@dimen/_36sp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#EEECEC">

                <EditText
                    android:id="@+id/resetPassCode2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:textSize="@dimen/_36sp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#EEECEC">

                <EditText
                    android:id="@+id/resetPassCode3"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:textSize="@dimen/_36sp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#EEECEC">

                <EditText
                    android:id="@+id/resetPassCode4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:textSize="@dimen/_36sp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardElevation="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#EEECEC">

                <EditText
                    android:id="@+id/resetPassCode5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAppearance="@style/fontfamily"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:cursorVisible="false"
                    android:textSize="@dimen/_36sp"
                    android:background="@android:color/transparent"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btnResetPasswordVerify"
            style="@style/buttonBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:text="Verify" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTryAnotherEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did not receive the email? Check your spam folder"
            android:textAppearance="@style/fontfamily"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or "
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="try another email address"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/primaryGreen"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
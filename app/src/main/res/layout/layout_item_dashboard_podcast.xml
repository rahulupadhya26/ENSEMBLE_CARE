<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_podcast"
    android:layout_width="210dp"
    android:layout_height="100dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_5dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/crd_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@color/divider"
            app:cardCornerRadius="@dimen/_10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/img_podcast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/crd_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_podcast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/_5dp"
                android:textAppearance="@style/fontfamily"
                android:text="Source"
                android:maxLines="2"
                android:textColor="@color/primaryGreen"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/txt_podcast_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_podcast_title"
                android:layout_margin="@dimen/_5dp"
                android:textAppearance="@style/fontfamily"
                android:text="headline"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"/>


        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
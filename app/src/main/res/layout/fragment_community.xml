<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CommunityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutCommunityOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/communityBack"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5dp"
                android:padding="@dimen/_5dp"
                android:src="@drawable/journal_resource_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Community"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/companionAdd"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5dp"
                android:padding="@dimen/_5dp"
                android:src="@drawable/add"
                app:tint="@color/black"
                android:visibility="gone"/>

        </RelativeLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerCommunities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabLayoutCommunities"
            android:layout_below="@+id/layoutCommunityOption"
            android:background="#F1F5FC"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutCommunities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/customTabText"
            app:tabIndicatorColor="@color/primaryGreen"
            app:tabIndicatorHeight="@dimen/_2dp"
            app:tabSelectedTextAppearance="@style/customTabText"
            app:tabIndicatorFullWidth="false"
            app:tabGravity="fill"
            app:tabIndicator="@null"
            android:layout_alignParentBottom="true"
            android:elevation="@dimen/_10dp"
            app:tabSelectedTextColor="@color/primaryGreen"
            app:tabTextColor="#908A94"/>

    </RelativeLayout>

</LinearLayout>
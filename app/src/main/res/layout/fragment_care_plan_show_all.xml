<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F5FC"
    tools:context=".fragment.CarePlanShowAllFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="@dimen/_5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp">

                    <ImageView
                        android:id="@+id/carePlanShowAllBack"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_5dp"
                        android:padding="@dimen/_5dp"
                        android:src="@drawable/back_care_plan" />

                    <ImageView
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/company_logo" />

                    <ImageView
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:padding="@dimen/_10dp"
                        android:src="@drawable/notification" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELECT A DATE"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="@color/calendarGrey"
                        android:textSize="@dimen/_20sp" />

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/tvDate"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/calendarGrey"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btnRight"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:background="@drawable/ic_arrow_right_24dp" />

                    <Button
                        android:id="@+id/btnLeft"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/btnRight"
                        android:background="@drawable/ic_arrow_left_24dp" />
                </RelativeLayout>

                <com.app.selfcare.calendar.SingleRowCalendar
                    android:id="@+id/carePlanCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:deselection="true"
                    app:longPress="false"
                    android:paddingStart="@dimen/_5dp"
                    android:paddingEnd="@dimen/_5dp"
                    app:multiSelection="false" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="PENDING TASKS"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="#830CDB"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Exercise"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="#1A205C"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_20dp"
                        app:cardElevation="@dimen/_5dp"
                        android:layout_marginTop="-10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:foreground="#80000000"
                                android:scaleType="centerCrop"
                                android:src="@drawable/exercise_careplan_back" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/fontfamily"
                                    android:textSize="@dimen/_20sp"
                                    android:text="Body workout"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_10dp"
                                    android:textStyle="bold"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    app:cardCornerRadius="@dimen/_20dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="#FFE9A0">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/fontfamily"
                                        android:text="50 mins"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sp"
                                        android:paddingStart="@dimen/_5dp"
                                        android:paddingEnd="@dimen/_5dp"/>

                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="Nutrition"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="#1A205C"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_20dp"
                        app:cardElevation="@dimen/_5dp"
                        android:layout_marginTop="-10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:foreground="#80000000"
                                android:scaleType="centerCrop"
                                android:src="@drawable/nutrition_img1" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/fontfamily"
                                    android:textSize="@dimen/_20sp"
                                    android:text="Fruit Salad Bowl"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_10dp"
                                    android:textStyle="bold"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    app:cardCornerRadius="@dimen/_20dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="#FFE9A0">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/fontfamily"
                                        android:text="5 mins"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sp"
                                        android:paddingStart="@dimen/_5dp"
                                        android:paddingEnd="@dimen/_5dp"/>

                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:text="COMPLETED TASKS"
                        android:textAppearance="@style/fontfamily"
                        android:textColor="#830CDB"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_5dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_20dp"
                        app:cardElevation="@dimen/_5dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:foreground="#80000000"
                                android:scaleType="centerCrop"
                                android:src="@drawable/meditation_careplan" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/fontfamily"
                                    android:textSize="@dimen/_20sp"
                                    android:text="Meditation"
                                    android:textColor="@color/white"
                                    android:padding="@dimen/_10dp"
                                    android:textStyle="bold"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    app:cardCornerRadius="@dimen/_20dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="#FFE9A0">

                                    <TextView
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/fontfamily"
                                        android:text="45 mins"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sp"
                                        android:paddingStart="@dimen/_5dp"
                                        android:paddingEnd="@dimen/_5dp"/>

                                </androidx.cardview.widget.CardView>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</FrameLayout>
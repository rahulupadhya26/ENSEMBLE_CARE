<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WelcomeFragment"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome\nto Self Care App!"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAppearance="@style/fontfamily"
        android:textSize="@dimen/_28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hope you are well today"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:textAppearance="@style/fontfamily"
        android:textSize="@dimen/_12sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/login_image"/>

    <Button
        android:id="@+id/btn_login_srcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style_blue"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:text="Login"
        android:textAppearance="@style/fontfamily"
        android:textSize="@dimen/_18sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_signup_srcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with Sign Up"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@color/black"
        android:textAppearance="@style/fontfamily"
        android:textSize="@dimen/_18sp"
        android:layout_marginTop="@dimen/_10dp"/>

</LinearLayout>
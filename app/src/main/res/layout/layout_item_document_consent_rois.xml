<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutDocumentConsentRoisView">

    <RelativeLayout
        android:id="@+id/layoutDocumentConsentsRois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/document_box"
        android:layout_margin="@dimen/_5dp">

        <TextView
            android:id="@+id/txtDocumentViewConsentRois"
            android:layout_toLeftOf="@+id/imgDocumentConsentRoisArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fontfamily"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/imgDocumentConsentRoisArrow"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5dp"
            android:src="@drawable/more_than" />

    </RelativeLayout>

</LinearLayout>
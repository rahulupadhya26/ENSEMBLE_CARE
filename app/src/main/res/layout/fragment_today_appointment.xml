<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TodayAppointmentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTodayAppointmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5dp"/>

    <TextView
        android:id="@+id/txtNoTodayAppointmentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:text="Currently you don't have any appointments."
        android:textAppearance="@style/fontfamily"
        android:textColor="@color/localBackground"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        android:visibility="gone" />

</FrameLayout>
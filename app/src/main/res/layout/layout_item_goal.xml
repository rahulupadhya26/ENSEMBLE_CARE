<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_goal"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/goalDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_time"
            android:layout_marginStart="@dimen/_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/fontfamily"
            android:singleLine="true"
            android:paddingStart="@dimen/_5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/txtGoalDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goalTitle"
            android:layout_marginStart="@dimen/_5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/_5dp"
            android:singleLine="true"
            android:textAppearance="@style/fontfamily"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/txtGoalDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGoalDesc"
            android:layout_marginStart="@dimen/_5dp"
            android:ellipsize="end"
            android:textAppearance="@style/fontfamily"
            android:maxLines="1"
            android:paddingStart="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtCreatedJournalDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtGoalDate"
            android:layout_marginStart="@dimen/_5dp"
            android:ellipsize="end"
            android:textAppearance="@style/fontfamily"
            android:maxLines="1"
            android:paddingStart="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/txtDeleteGoal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/primaryGreen" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/imgCardBackground"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:gravity="center"
                    android:text="July"
                    android:textAppearance="@style/fontfamily"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/primaryGreen" />
            </RelativeLayout>

            <TextView
                android:id="@+id/goalDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:gravity="center"
                android:text="24"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:textSize="@dimen/_24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Goal 1"
                android:layout_marginTop="@dimen/_10dp"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:gravity="center"
                android:text="Everyday"
                android:textAppearance="@style/fontfamily"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>